# Section.test.cielo

import {assert} from '@jdeighan/exceptions'
import {tester} from '@jdeighan/unit-tester'
import {undef} from '@jdeighan/coffee-utils'
import {
	blockToArray, arrayToBlock, firstLine, remainingLines,
	normalizeBlock, truncateBlock,
	joinBlocks, forEachLine, forEachBlock, forEachSetOfBlocks,
	} from '@jdeighan/coffee-utils/block'

import {Section} from '@jdeighan/coffee-utils/section'

# ---------------------------------------------------------------------------

html = new Section('html')
tester.equal  {{LINE}}, html.length(), 0
tester.truthy {{LINE}}, html.isEmpty()
tester.falsy  {{LINE}}, html.nonEmpty()

html.add '<h1>title</h1>'
tester.equal  {{LINE}}, html.length(), 1
tester.falsy  {{LINE}}, html.isEmpty()
tester.truthy  {{LINE}}, html.nonEmpty()

html.add '<p>para</p>'
tester.equal  {{LINE}}, html.length(), 2
tester.falsy  {{LINE}}, html.isEmpty()
tester.truthy {{LINE}}, html.nonEmpty()

html.indent(1, "\t")

tester.equal {{LINE}}, html.getBlock(), "\t<h1>title</h1>\n\t<p>para</p>"
