# Section.test.cielo

import {assert} from '@jdeighan/exceptions'
import {utest} from '@jdeighan/unit-tester'
import {undef} from '@jdeighan/coffee-utils'
import {
	blockToArray, arrayToBlock, firstLine, remainingLines,
	normalizeBlock, truncateBlock,
	joinBlocks, forEachLine, forEachBlock, forEachSetOfBlocks,
	} from '@jdeighan/coffee-utils/block'

import {Section} from '@jdeighan/coffee-utils/section'

# ---------------------------------------------------------------------------

html = new Section('html')
utest.equal  {{LINE}}, html.length(), 0
utest.truthy {{LINE}}, html.isEmpty()
utest.falsy  {{LINE}}, html.nonEmpty()

html.add '<h1>title</h1>'
utest.equal  {{LINE}}, html.length(), 1
utest.falsy  {{LINE}}, html.isEmpty()
utest.truthy  {{LINE}}, html.nonEmpty()

html.add '<p>para</p>'
utest.equal  {{LINE}}, html.length(), 2
utest.falsy  {{LINE}}, html.isEmpty()
utest.truthy {{LINE}}, html.nonEmpty()

html.indent(1, "\t")

utest.equal {{LINE}}, html.getBlock(), "\t<h1>title</h1>\n\t<p>para</p>"
