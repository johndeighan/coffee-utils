(() ->
	utest.truthy {{LINE}}, isUniqueList(undef)
	utest.truthy {{LINE}}, isUniqueList([])
	utest.truthy {{LINE}}, isUniqueList([1])
	utest.truthy {{LINE}}, isUniqueList(['a'])
	utest.truthy {{LINE}}, isUniqueList(['a','b','c'])
	utest.truthy {{LINE}}, isUniqueList([1,2,3])
	utest.falsy  {{LINE}}, isUniqueList(['a','b','a'])
	utest.falsy  {{LINE}}, isUniqueList([1,2,1])

	# --- test for single, lower-case letter
	func = (x) ->
		isString(x) && defined(x.match(/^[a-z]$/))

	utest.truthy {{LINE}}, isUniqueList(['a','b','c'], func)
	utest.falsy  {{LINE}}, isUniqueList(['a','b','C'], func)
	utest.falsy  {{LINE}}, isUniqueList(['a','b',1], func)
	utest.falsy  {{LINE}}, isUniqueList(['a','b','a'], func)
	utest.falsy  {{LINE}}, isUniqueList(['a','b',undef], func)
	utest.falsy  {{LINE}}, isUniqueList(['a','b',''], func)
	)()

