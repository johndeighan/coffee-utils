	utest.falsy  {{LINE}}, isString(l)
	utest.falsy  {{LINE}}, isString(o)
	utest.falsy  {{LINE}}, isString(n)
	utest.falsy  {{LINE}}, isString(n2)
	utest.truthy {{LINE}}, isString(s)
	utest.truthy {{LINE}}, isString(s2)

	utest.falsy  {{LINE}}, isObject(h)
	utest.falsy  {{LINE}}, isObject(l)
	utest.truthy {{LINE}}, isObject(o)
