# taml.test.cielo

import {undef} from '@jdeighan/coffee-utils'
import {log, tamlStringify} from '@jdeighan/coffee-utils/log'
import {UnitTester, simple} from '@jdeighan/unit-tester'
import {untabify} from '@jdeighan/coffee-utils/indent'
import {isTAML, fromTAML, toTAML} from '@jdeighan/coffee-utils/taml'

# ---------------------------------------------------------------------------

simple.truthy {{LINE}}, isTAML("---\n- first\n- second")
simple.falsy  {{LINE}}, isTAML("x---\n")
simple.equal  {{LINE}}, fromTAML("---\n- a\n- b"), ['a','b']
simple.equal  {{LINE}}, tamlStringify({a:1}), "---\na: 1"
simple.equal  {{LINE}}, tamlStringify({a:1, b:2}), "---\na: 1\nb: 2"
simple.equal  {{LINE}}, tamlStringify([1,'abc',{a:1}]), "---\n- 1\n- abc\n-\n   a: 1"

simple.equal {{LINE}}, toTAML({a:1, b:2}), """
	---
	a: 1
	b: 2
	"""

simple.equal {{LINE}}, toTAML(['a','b']), """
	---
	- a
	- b
	"""

simple.equal {{LINE}}, toTAML(['a','b', {a:1}, ['x']]), untabify("""
	---
	- a
	- b
	-
		a: 1
	-
		- x
	""")

__END__

