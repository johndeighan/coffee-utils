# taml.test.cielo

import {assert, croak} from '@jdeighan/exceptions'
import {LOG} from '@jdeighan/exceptions/log'
import {UnitTester, tester} from '@jdeighan/unit-tester'
import {undef} from '@jdeighan/coffee-utils'
import {untabify} from '@jdeighan/coffee-utils/indent'
import {isTAML, toTAML, fromTAML} from '@jdeighan/coffee-utils/taml'

# ---------------------------------------------------------------------------

tester.truthy {{LINE}}, isTAML("---\n- first\n- second")
tester.falsy  {{LINE}}, isTAML("x---\n")

tester.equal  {{LINE}}, toTAML({a:1}), "---\na: 1"
tester.equal  {{LINE}}, toTAML({a:1, b:2}), "---\na: 1\nb: 2"
tester.equal  {{LINE}}, toTAML([1,'abc',{a:1}]), "---\n- 1\n- abc\n-\n   a: 1"

tester.equal {{LINE}}, toTAML({a:1, b:2}), """
	---
	a: 1
	b: 2
	"""

tester.equal {{LINE}}, toTAML(['a','b']), """
	---
	- a
	- b
	"""

tester.equal {{LINE}}, toTAML(['a','b', {a:1}, ['x']]), untabify("""
	---
	- a
	- b
	-
		a: 1
	-
		- x
	""")

tester.equal  {{LINE}}, fromTAML("---\n- a\n- b"), ['a','b']
tester.equal  {{LINE}}, fromTAML("---\ntitle:\n\ten: Hello, she said."),
		{
		title:
			en: 'Hello, she said.'
		}

__END__

