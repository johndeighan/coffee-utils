simple.equal  {{LINE}}, fromTAML("""
		---
		title:
			en: "Hello", she said.
		"""), {
		title:
			en: '"Hello", she said.'
		}

simple.equal  {{LINE}}, tamlStringify({a:1, b:2}), """
		---
		a: 1
		b: 2
		"""
simple.equal  {{LINE}}, tamlStringify([1,'abc',{a:1}]), """
		---
		- 1
		- abc
		-
			a: 1
		"""
