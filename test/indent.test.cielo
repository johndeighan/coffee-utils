# indent.test.cielo

import {assert} from '@jdeighan/exceptions'

import {UnitTesterNorm, utest} from '@jdeighan/unit-tester'
import {isInteger} from '@jdeighan/coffee-utils'
import {
	indentLevel, isUndented, indentation, undented, splitLine,
	indented, tabify, untabify, enclose,
	} from '@jdeighan/coffee-utils/indent'

# ---------------------------------------------------------------------------

utest.equal {{LINE}}, indentLevel("abc"), 0
utest.equal {{LINE}}, indentLevel("\tabc"), 1
utest.equal {{LINE}}, indentLevel("\t\tabc"), 2

# ---------------------------------------------------------------------------

utest.truthy {{LINE}}, isUndented("abc")
utest.falsy  {{LINE}}, isUndented("\tabc")
utest.falsy  {{LINE}}, isUndented("\t\tabc")

# ---------------------------------------------------------------------------

utest.equal {{LINE}}, indentation(0), ''
utest.equal {{LINE}}, indentation(1), "\t"
utest.equal {{LINE}}, indentation(2), "\t\t"

# ---------------------------------------------------------------------------

utest.equal {{LINE}}, undented("abc"), "abc"
utest.equal {{LINE}}, undented("\tabc"), "abc"
utest.equal {{LINE}}, undented("\t\tabc"), "abc"
utest.equal {{LINE}}, undented("\t\tabc", 0), "\t\tabc"
utest.equal {{LINE}}, undented("\t\tabc", 1), "\tabc"
utest.equal {{LINE}}, undented("\t\tabc", 2), "abc"

utest.equal {{LINE}}, undented([]), []
utest.equal {{LINE}}, undented(['abc']), ['abc']
utest.equal {{LINE}}, undented(['\tabc']), ['abc']
utest.equal {{LINE}}, undented(['\t\tabc']), ['abc']
utest.equal {{LINE}}, undented(['\t\tabc'], 0), ['\t\tabc']
utest.equal {{LINE}}, undented(['\t\tabc'], 1), ['\tabc']
utest.equal {{LINE}}, undented(['\t\tabc'], 2), ['abc']

# ---------------------------------------------------------------------------

(() ->
	block = "\t\tfirst\n\t\tsecond\n\t\t\tthird\n"
	expected = "first\nsecond\n\tthird\n"
	utest.equal {{LINE}}, undented(block), expected
	)()

# ---------------------------------------------------------------------------

(() ->
	array = [
		"\t\tfirst",
		"\t\tsecond",
		"\t\t\tthird"
		]
	expected = [
		"first",
		"second",
		"\tthird"
		]
	utest.equal {{LINE}}, undented(array), expected
	)()

# ---------------------------------------------------------------------------

utest.equal {{LINE}}, splitLine("abc"), [0, "abc"]
utest.equal {{LINE}}, splitLine("\tabc"), [1, "abc"]
utest.equal {{LINE}}, splitLine("\t\tabc"), [2, "abc"]
utest.equal {{LINE}}, splitLine(""),       [0, ""]
utest.equal {{LINE}}, splitLine("\t\t\t"), [0, ""]
utest.equal {{LINE}}, splitLine("\t \t"),  [0, ""]
utest.equal {{LINE}}, splitLine("   "),    [0, ""]

# ---------------------------------------------------------------------------

utest.equal {{LINE}}, indented("abc", 0), "abc"
utest.equal {{LINE}}, indented("abc", 1), "\tabc"
utest.equal {{LINE}}, indented("abc", 2), "\t\tabc"

# --- empty lines, indented, should just be empty lines
utest.equal {{LINE}}, indented("abc\n\ndef", 2), "\t\tabc\n\n\t\tdef"

(() ->
	str = "main\n\toverflow: auto\n\nnav\n\toverflow: auto"
	exp = "\tmain\n\t\toverflow: auto\n\n\tnav\n\t\toverflow: auto"
	utest.equal 59, indented(str, 1), exp
	)()

# --- indented also handles arrays, so test them, too

# --- empty lines, indented, should just be empty lines
utest.equal {{LINE}}, indented(['abc','','def'], 2),
		['\t\tabc','','\t\tdef']

(() ->
	lLines = [
		'main'
		'\toverflow: auto'
		''
		'nav'
		'\toverflow: auto'
		]
	lExp   = [
		'\tmain'
		'\t\toverflow: auto'
		''
		'\tnav'
		'\t\toverflow: auto'
		]
	utest.equal {{LINE}}, indented(lLines, 1), lExp
	)()

# --- make sure ALL internal lines are indented

utest.equal {{LINE}}, indented(['abc\ndef','','ghi'], 1),
		['\tabc', '\tdef', '', '\tghi']

# ---------------------------------------------------------------------------

(() ->
	prefix = '   '    # 3 spaces

	utest.equal {{LINE}}, tabify("""
		first line
		#{prefix}second line
		#{prefix}#{prefix}third line
		""", 3), """
		first line
		\tsecond line
		\t\tthird line
		"""
	)()

# ---------------------------------------------------------------------------
# you don't need to tell it number of spaces

(() ->
	prefix = '   '    # 3 spaces

	utest.equal {{LINE}}, tabify("""
		first line
		#{prefix}second line
		#{prefix}#{prefix}third line
		"""), """
		first line
		\tsecond line
		\t\tthird line
		"""
	)()

# ---------------------------------------------------------------------------

(() ->
	prefix = '   '    # 3 spaces

	utest.equal {{LINE}}, untabify("""
		first line
		\tsecond line
		\t\tthird line
		""", 3), """
		first line
		#{prefix}second line
		#{prefix}#{prefix}third line
		"""
	)()

# ---------------------------------------------------------------------------

utest.equal {{LINE}}, indented("export name = undef", 1), "\texport name = undef"
utest.equal {{LINE}}, indented("export name = undef", 2), "\t\texport name = undef"

# ---------------------------------------------------------------------------
# make sure indentLevel() works for blocks

utest.equal {{LINE}}, indentLevel("\t\tabc\n\t\tdef\n\t\t\tghi"), 2

# ---------------------------------------------------------------------------

(() ->
	block = """
		x = 42
		callme(x)
		"""

	utest.equal {{LINE}}, enclose(block, '<script>', '</script>'), """
		<script>
			x = 42
			callme(x)
		</script>
		"""

	utest.equal {{LINE}}, enclose(block, 'pre', 'post', '...'), """
		pre
		...x = 42
		...callme(x)
		post
		"""

	)()
