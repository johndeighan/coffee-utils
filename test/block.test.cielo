# block.test.cielo

import {assert} from '@jdeighan/exceptions'
import {LOG} from '@jdeighan/exceptions/log'

import {simple} from '@jdeighan/unit-tester'
import {undef} from '@jdeighan/coffee-utils'
import {
	blockToArray, arrayToBlock, toArray, toBlock,
	firstLine, remainingLines,
	normalizeBlock, truncateBlock,
	joinBlocks, forEachLine, forEachBlock, forEachSetOfBlocks,
	} from '@jdeighan/coffee-utils/block'

# ---------------------------------------------------------------------------

simple.equal {{LINE}}, blockToArray("abc\nxyz\n"), [
	'abc'
	'xyz'
	]

simple.equal {{LINE}}, blockToArray("abc\nxyz\n\n\n\n"), [
	'abc'
	'xyz'
	]

simple.equal {{LINE}}, blockToArray("abc\n\nxyz\n"), [
	'abc'
	''
	'xyz'
	]

# ---------------------------------------------------------------------------

simple.equal {{LINE}}, toArray("abc\nxyz"), [
	'abc'
	'xyz'
	]

simple.equal {{LINE}}, toArray("""
	abc
	xyz
	"""), [
	'abc'
	'xyz'
	]

simple.equal {{LINE}}, toArray("""
	abc
	xyz
	""", 'noEmptyLines'), [
	'abc'
	'xyz'
	]

simple.equal {{LINE}}, toArray("""
