# ... pass in an array

simple.equal {{LINE}}, toArray(["abc", "xyz"]), [
	'abc'
	'xyz'
	]

simple.equal {{LINE}}, toArray(["abc", "", "xyz"]), [
	'abc'
	''
	'xyz'
	]

simple.equal {{LINE}}, toArray(["abc", "", "", "xyz", ""]), [
